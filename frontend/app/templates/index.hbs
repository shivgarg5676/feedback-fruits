{{#paper-button raised=true onClick=(action 'playMultiplayer')}}
  Play Multiplayer
{{/paper-button}}
{{#paper-list}}
  {{#paper-subheader}}Top players{{/paper-subheader}}
  {{#paper-item class="md-1-line"}}
    <div class="layout-row flex">
      <div class="flex-70">
        Email
      </div>
      <div class="flex-30">
        Games Won
      </div>
    </div>
  {{/paper-item}}
  {{#each sortedPlayers as |player|}}
    {{#paper-item class="md-1-line"}}
      <div class="layout-row flex">
        <div class="flex-70">
          {{player.email}}
        </div>
        <div class="flex-30">
          {{player.gamesWon}}
        </div>
      </div>

    {{/paper-item}}
  {{/each}}
{{/paper-list}}
